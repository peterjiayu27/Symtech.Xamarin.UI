<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.App">
    <Application.Resources>
        <x:Double x:Key="FontSizeNormal">12</x:Double>
        <x:Double x:Key="FontSizeLarge">14</x:Double>
        <x:Double x:Key="FontSizeXLarge">17</x:Double>
        <x:Double x:Key="FontSizeSmall">11</x:Double>

        <Color x:Key="BackgroundColor">#f5f5f5</Color>
        <Color x:Key="BackgroundColorLight">#fafafa</Color>
        <Color x:Key="PrimaryColor">#03a9f4</Color>
        <Color x:Key="AccentColor">#f44336</Color>
        <Color x:Key="ErrorColor">#FF0000</Color>
        <Color x:Key="DisabledColor">#E6DAB9</Color>
    </Application.Resources>
</Application>